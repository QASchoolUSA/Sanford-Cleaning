{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "style-src 'self' 'unsafe-inline' *.tawk.to fonts.googleapis.com cdn.jsdelivr.net; script-src 'self' 'unsafe-inline' 'unsafe-eval' *.tawk.to cdn.jsdelivr.net; frame-src 'self' *.tawk.to; font-src 'self' *.tawk.to fonts.gstatic.com; img-src 'self' data: *.tawk.to cdn.jsdelivr.net tawk.link s3.amazonaws.com; connect-src 'self' *.tawk.to wss://*.tawk.to; form-action 'self' *.tawk.to;"
        },
        {
          "key": "Content-Type",
          "value": "text/html"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/server.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
        "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|webp))",
        "destination": "/$1"
      },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}