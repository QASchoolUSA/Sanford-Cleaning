# Analytics Configuration
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here
NEXT_PUBLIC_META_PIXEL_ID=your_meta_pixel_id_here
NEXT_PUBLIC_CLARITY_PROJECT_ID=u380kr9hzd

# Production API URL (automatically set by NODE_ENV)
# NODE_ENV=production (set automatically by Vercel)

# Stripe Configuration
# Public (client) key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_or_test_key_here

# Server secret key (DO NOT expose on client)
STRIPE_SECRET_KEY=sk_live_or_test_key_here

# Optional: webhook signing secret (if using webhooks)
STRIPE_WEBHOOK_SECRET=whsec_optional_here

# Optional: your site URL for building success/cancel URLs
NEXT_PUBLIC_SITE_URL=https://sanfordcleaning.com

# Email configuration (Resend)
# Required for sending emails from API routes
RESEND_API_KEY=your_resend_api_key_here
# From address used for outgoing emails
EMAIL_FROM=no-reply@sanfordcleaning.com
# Admin/recipient address for business notifications
EMAIL_TO=info@sanfordcleaning.com

# SMTP configuration (SpaceMail or other provider)
# If set, the app will use SMTP via Nodemailer
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
# Set to true only if using port 465
SMTP_SECURE=false